#include <stdio.h>
int main()
{
    int a[10][10], b[10][10], i, j, d, n, m, s[10][10];
    printf("enter the no. of rows and columns: ");
    scanf("%d %d", &n, &m);
    printf("enter the first array: ");
    //n-i--rows
    //m-j--columns
    for (i = 0; i < n; i++)
    {
        for (j = 0; j < m; j++)
        {
            scanf(" %d", &a[i][j]);
        }
    }

    printf("enter the second array:");
    for (i = 0; i < n; i++)
    {
        for (j = 0; j < m; j++)
        {
            scanf(" %d", &b[i][j]);
        }
    }

    printf("the first array is \n");

    for (i = 0; i < n; i++)
    {
        for (j = 0; j < m; j++)
        {
            printf("\t %d", a[i][j]);
        }
        printf("\n");
    }

    printf("the second array is \n");

    for (i = 0; i < n; i++)
    {
        for (j = 0; j < m; j++)
        {
            printf("\t %d", b[i][j]);
        }
        printf("\n");
    }
