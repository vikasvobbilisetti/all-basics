question-4



#include<stdio.h>
void rec1(int n)
{
    if(n<=50)
    {
        printf(" %d ",n);
        rec1(n+1);
    }
}
int main()
{
    int n=1;
    printf("First 50 Natural Numbers are:");
    rec1(n);
}
